<Window x:Class="GrockerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrockerWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu DockPanel.Dock="Top" x:Name="menu">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuFileOpen"/>
                <MenuItem Header="_Close" />
                <MenuItem Header="Close _all" />
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuFileExit" />
            </MenuItem>
        </Menu>
        <TabControl x:Name="tabControl" Margin="2,2,2,2">
        </TabControl>
    </DockPanel>
</Window>
