<UserControl x:Class="GrockerWpf.LogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GrockerWpf"
             mc:Ignorable="d" 
             d:DesignHeight="266.17" d:DesignWidth="300" BorderThickness="1">
    <DockPanel>
        <ScrollBar DockPanel.Dock="Right"  x:Name="scrollBar" Scroll="scrollBar_Scroll"/>
        <TextBox x:Name="textBox" IsReadOnly="True" SizeChanged="textBox_SizeChanged" />
    </DockPanel>
</UserControl>
